# ===================================
# DJANGO CONFIGURATION
# ===================================
SECRET_KEY=your-secret-key-here-generate-with-django
DEBUG=False
ALLOWED_HOSTS=yourdomain.azurewebsites.net,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.azurewebsites.net,https://www.yourdomain.com

# ===================================
# DATABASE CONFIGURATION (Azure PostgreSQL)
# ===================================
# Format: postgresql://username:password@server:port/database?sslmode=require
DATABASE_URL=postgresql://pawconnect_admin:YourPassword123@pawconnect-db.postgres.database.azure.com:5432/pawconnect?sslmode=require

# ===================================
# EMAIL CONFIGURATION (SendGrid SMTP)
# ===================================
# For production, use SendGrid (100 free emails/day)
# For development, leave EMAIL_BACKEND commented to use console backend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=SG.your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===================================
# CUSTOM ADMIN URL (Security)
# ===================================
# Change from default 'admin' to something secret
# Admin will be accessible at: https://yourdomain.com/secret-admin-panel-xyz/
ADMIN_URL=secret-admin-panel-xyz

# ===================================
# CHATBOT CONFIGURATION (Groq API)
# ===================================
GROQ_API_KEY=your-groq-api-key-here

# ===================================
# API CONFIGURATION
# ===================================
API_URL=http://127.0.0.1:8001

# ===================================
# NOTES
# ===================================
# - Static files are handled by WhiteNoise (no additional config needed)
# - In development, DEBUG=True will use SQLite and console email backend
# - In production, DEBUG=False will use PostgreSQL and SMTP email backend
